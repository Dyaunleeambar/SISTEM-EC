# Configuración del Sistema de Estimulación
# Copia este archivo como config.env y ajusta los valores según tu entorno

# Puerto del servidor
PORT=3001

# Entorno de desarrollo
NODE_ENV=development

# Configuración de la base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=Cuba123456
DB_NAME=colaboradores_db

# Configuración JWT (cambia estos valores por seguridad)
JWT_SECRET=tu_secreto_jwt_muy_seguro_y_largo
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Configuración de seguridad
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de contraseñas
PASSWORD_EXPIRY_DAYS=30
MIN_PASSWORD_LENGTH=6 
